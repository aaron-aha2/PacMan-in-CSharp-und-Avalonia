<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PacManGame.Views.GameOverWindow"
        Title="Game Over"
        Width="800"
        Height="600">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBlock Text="GAME OVER!" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center"/>
        <TextBlock x:Name="ScoreText" Text="Your Score: 0" FontSize="20" HorizontalAlignment="Center"/>
        <Button Content="Restart" Click="OnRestartButtonClick" HorizontalAlignment="Center"/>
        <Button Content="Exit" Click="OnExitButtonClick" HorizontalAlignment="Center"/>

    </StackPanel>
</Window>