<!-- PacManGame/Views/MainWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PacManGame.Views.MainWindow"
        Width="600" Height="600"
        WindowStartupLocation="CenterScreen"
        Title="PacMan Game">

     <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="ScoreCounter" Grid.Row="0" Grid.Column="0">
            Score: 0
        </TextBlock>

        <Border Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas x:Name="GameCanvas" Width="400" Height="400" Background="White"/>
        </Border>

        <TextBlock x:Name="LiveCounter" Grid.Row="2" Grid.Column="0">
            Lives: 3
        </TextBlock>
    </Grid>
</Window>
