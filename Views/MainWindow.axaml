<!-- PacManGame/Views/MainWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PacManGame.Views.MainWindow"
        Width="650" Height="650"
        WindowStartupLocation="CenterScreen"
        Title="PacMan Game">

     <Grid ColumnDefinitions="*,600,*" RowDefinitions="*,600,*"> <!-- "*": Those columns/rows are get the same size out of the remaining space-->

        <!-- TODO: Add different colour options -->
        <Border Grid.Row="1" Grid.Column="1">
            <Canvas x:Name="GameCanvas" Width="600" Height="600" Background="White"/>
        </Border>

        <!-- TODO: Add ScoreCounter -->
        <TextBlock x:Name="ScoreCounter" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" Text="Score: 0"/>

        <!-- TODO: Add LiveCounter -->
        <TextBlock x:Name="LiveCounter" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Text="Lives: 3" />
        
    </Grid>
</Window>
